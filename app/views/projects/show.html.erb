<div class="row">
  <div class="col-md-8">
    <%= image_tag @project.image.thumb.url, class: 'img-responsive' %>
  </div>
  <div class="col-md-4">
    <h1><%= @project.title %></h1>
    <em><%= @project.short_description %></em>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <p><%= @project.description %></p>
  </div>
</div>

<hr>

<h3>Project FAQ's</h3>

<%= link_to 'Add a FAQ', new_project_faq_path(@project), class: 'btn btn-primary' %><br><br>

<% @project.faqs.each do |faq| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= faq.question %>
      <div class="pull-right">
        <%= link_to '', edit_project_faq_path(@project, faq), class: 'glyphicon glyphicon-pencil' %>
        <%= link_to '', project_faq_path(@project, faq), method: :delete, data: { confirm: 'Are you sure?'}, class: 'glyphicon glyphicon-trash' %>
      </div>
    </div>
    <div class="panel-body">
      <%= faq.answer %>
    </div>
  </div>
<% end %>
