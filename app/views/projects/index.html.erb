<h1>Projects</h1>

<%= link_to 'Create Project', new_project_path %>

<% @projects.each do |project| %>
  <h3><%= project.title %></h3>
  <h4><%= project.short_description %></h4>
  <%= image_tag project.image unless project.image.nil? %>
  <%= link_to 'Edit', edit_project_path(project) %>
<% end %>
