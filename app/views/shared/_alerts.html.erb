<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Shareable App Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Shareable App Error", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Shareable App Notification", sticky: false) %>
<% end %>
